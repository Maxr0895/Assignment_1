# WBR Actionizer Environment Configuration (Stateless)
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=8080

# JWT Secret (change this in production!)
JWT_SECRET=your_jwt_secret_here

# OpenAI Configuration
# Secret Name in AWS Secrets Manager (production)
OPENAI_SECRET_NAME=a2-n8501645

# OpenAI API Key (local development fallback only)
# If Secrets Manager is unavailable, this will be used
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# SSM Parameter Store Configuration
# Parameter name for API base URL in Systems Manager
API_BASE_URL_PARAM=/wbr/api_base_url

# API Base URL (local development fallback)
# Used if SSM Parameter Store is unavailable
API_BASE_URL=http://localhost:8080

# AWS Configuration (Required for stateless operation)
AWS_REGION=ap-southeast-2
S3_BUCKET=your-s3-bucket-name
DDB_TABLE=your-dynamodb-table-name
QUT_USERNAME=n12345678@qut.edu.au

# SQS Configuration (Required for A3 microservices)
SQS_QUEUE_URL=https://sqs.ap-southeast-2.amazonaws.com/123456789012/your-queue-name

# AWS Credentials (from AWS Academy - update when they expire)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_SESSION_TOKEN=your_session_token

# AWS Cognito Authentication (Required)
COGNITO_USER_POOL_ID=your-cognito-user-pool-id
COGNITO_CLIENT_ID=your-cognito-client-id

# FFmpeg Path
# Windows: C:\path\to\ffmpeg.exe
# Linux/Mac/Docker: /usr/bin/ffmpeg or /usr/local/bin/ffmpeg
FFMPEG_PATH=/usr/bin/ffmpeg

# Optional: Upload size limit (in MB)
# UPLOAD_MAX_MB=300